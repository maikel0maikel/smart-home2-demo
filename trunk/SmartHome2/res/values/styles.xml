<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="theme" parent="@android:style/Theme.Black">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="title_bar" parent="@android:style/Theme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/SMARTHOME_FONTCOLOR</item>
        <item name="android:background">@drawable/title_bar_background</item>
        <item name="android:padding">5.0sp</item>
    </style>
    <style name="menu_list">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/listitem_color_bk</item>
        <item name="android:padding">10.0dip</item>
    </style>
    <style name="list_font">
        <item name="android:textSize">19.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="RadioButtonText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
    </style>
</resources>