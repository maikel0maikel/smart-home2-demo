<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/tab_right_background" />
    <item android:state_checked="false" android:state_pressed="true" android:drawable="@drawable/tab_default_background" />
    <item android:state_focused="true" android:state_checked="true" android:drawable="@drawable/tab_right_background" />
    <item android:state_focused="true" android:state_checked="false" android:drawable="@drawable/tab_default_background" />
    <item android:state_checked="false" android:drawable="@drawable/tab_default_background" />
    <item android:state_checked="true" android:drawable="@drawable/tab_right_background" />
</selector>