      <Button android:id="@+id/add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" android:text="添加" 
          android:background="@drawable/title_bar_background" android:textColor="#ffffffff" android:layout_marginLeft="20dip" android:textSize="20dp" android:layout_alignParentRight="true" />
  </LinearLayout>
       <include layout="@layout/home_tab_bar" />
