<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nd.android.lib.theme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission> 
	<uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/ndtheme_app_name" >
        <activity
            android:name="com.nd.hilauncherdev.lib.theme.HiLauncherExThemeShinLibActivity"
            android:label="@string/ndtheme_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 下载任务管理 -->
        <activity android:name="com.nd.hilauncherdev.lib.theme.HiLauncherExDownTaskManagerActivity"/>
        <!-- 下载服务 -->
		<service android:name="com.nd.hilauncherdev.lib.theme.down.DownloadService"></service>
		<!--桌面主题安装结果接收器-->
		<receiver android:name="com.nd.hilauncherdev.lib.theme.api.ThemeInstallResultReceiver">
			<intent-filter>
				<action android:name="nd.pandahome.external.response.theme.apt.install" />
			</intent-filter>
		</receiver>
		<receiver android:name="com.nd.hilauncherdev.lib.theme.api.LauncherInstallReceiver">             
            <intent-filter>  
            	<action android:name="android.intent.action.PACKAGE_ADDED" />                
            	<data android:scheme="package" />
            </intent-filter>  
        </receiver> 
    </application>

</manifest>